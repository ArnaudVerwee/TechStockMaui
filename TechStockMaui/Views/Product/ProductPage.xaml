<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.ProductPage"
             Title="Produits">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Padding="10" BackgroundColor="#f8f9fa">
            <Button Grid.Column="0" Text="ðŸ " Clicked="OnBackToDashboardClicked" BackgroundColor="Transparent" />
            <Label Grid.Column="1" Text="Gestion des Produits" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
            <Button Grid.Column="2" Text="âž•" Clicked="OnCreateClicked" BackgroundColor="#007bff" TextColor="White" />
        </Grid>

        <!-- Formulaire de recherche avec Pickers -->
        <Frame Grid.Row="1" BorderColor="LightGray" Padding="10" Margin="5" BackgroundColor="White">
            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*,*" RowSpacing="8" ColumnSpacing="8">
                <!-- PremiÃ¨re ligne -->
                <Entry Grid.Row="0" Grid.Column="0" x:Name="NameEntry" Placeholder="Nom..." FontSize="14" />
                <Entry Grid.Row="0" Grid.Column="1" x:Name="SerialEntry" Placeholder="NÂ° sÃ©rie..." FontSize="14" />
                <Picker Grid.Row="0" Grid.Column="2" x:Name="TypePicker" Title="Type" FontSize="14" />

                <!-- DeuxiÃ¨me ligne -->
                <Picker Grid.Row="1" Grid.Column="0" x:Name="SupplierPicker" Title="Fournisseur" FontSize="14" />
                <Picker Grid.Row="1" Grid.Column="1" x:Name="UserPicker" Title="Utilisateur" FontSize="14" />

                <!-- Boutons sur la troisiÃ¨me ligne -->
                <HorizontalStackLayout Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Spacing="10" HorizontalOptions="End">
                    <Button Text="ðŸ” Rechercher" Clicked="OnSearchClicked" BackgroundColor="#007bff" TextColor="White" FontSize="14" />
                    <Button Text="ðŸ”„ Reset" Clicked="OnResetClicked" BackgroundColor="#6c757d" TextColor="White" FontSize="14" />
                </HorizontalStackLayout>
            </Grid>
        </Frame>

        <!-- Tableau des produits -->
        <ScrollView Grid.Row="2" Orientation="Both" Margin="5">
            <StackLayout>
                <!-- En-tÃªte du tableau -->
                <Grid BackgroundColor="#e9ecef" Padding="8,12" ColumnDefinitions="120,100,100,120,120,220">
                    <Label Grid.Column="0" Text="Nom" FontAttributes="Bold" FontSize="14" />
                    <Label Grid.Column="1" Text="NÂ° SÃ©rie" FontAttributes="Bold" FontSize="14" />
                    <Label Grid.Column="2" Text="Type" FontAttributes="Bold" FontSize="14" />
                    <Label Grid.Column="3" Text="Fournisseur" FontAttributes="Bold" FontSize="14" />
                    <Label Grid.Column="4" Text="Utilisateur" FontAttributes="Bold" FontSize="14" />
                    <Label Grid.Column="5" Text="Actions" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center" />
                </Grid>

                <!-- Lignes du tableau -->
                <CollectionView x:Name="ProductList" BackgroundColor="White">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8,10" ColumnDefinitions="120,100,100,120,120,220" BackgroundColor="White">
                                <BoxView Grid.ColumnSpan="6" Color="LightGray" HeightRequest="1" VerticalOptions="End" />

                                <Label Grid.Column="0" Text="{Binding Name}" FontSize="14" VerticalOptions="Center" />
                                <Label Grid.Column="1" Text="{Binding SerialNumber}" FontSize="14" VerticalOptions="Center" />
                                <Label Grid.Column="2" Text="{Binding TypeName}" FontSize="14" VerticalOptions="Center" />
                                <Label Grid.Column="3" Text="{Binding SupplierName}" FontSize="14" VerticalOptions="Center" />
                                <Label Grid.Column="4" Text="{Binding AssignedUserName}" FontSize="14" VerticalOptions="Center" />

                                <StackLayout Grid.Column="5" Orientation="Horizontal" Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                                    <!-- Bouton Edit -->
                                    <Button Text="âœï¸" 
                                            Clicked="OnEditClicked" 
                                            CommandParameter="{Binding .}" 
                                            BackgroundColor="#ffc107" 
                                            TextColor="Black" 
                                            FontSize="10" 
                                            WidthRequest="28" 
                                            HeightRequest="28" />

                                    <!-- Bouton Details -->
                                    <Button Text="ðŸ‘ï¸" 
                                            Clicked="OnDetailsClicked" 
                                            CommandParameter="{Binding .}" 
                                            BackgroundColor="#17a2b8" 
                                            TextColor="White" 
                                            FontSize="10" 
                                            WidthRequest="28" 
                                            HeightRequest="28" />

                                    <!-- âœ… Bouton Assigner/DÃ©sassigner intelligent -->
                                    <Button Clicked="OnAssignClicked" 
                                            CommandParameter="{Binding .}" 
                                            TextColor="White" 
                                            FontSize="8" 
                                            WidthRequest="55" 
                                            HeightRequest="28">
                                        <Button.Triggers>
                                            <!-- Si AssignedUserName est vide ou null = Bouton ASSIGNER -->
                                            <DataTrigger TargetType="Button" Binding="{Binding AssignedUserName}" Value="">
                                                <Setter Property="Text" Value="ðŸ‘¤ Assign" />
                                                <Setter Property="BackgroundColor" Value="#007bff" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Button" Binding="{Binding AssignedUserName}" Value="{x:Null}">
                                                <Setter Property="Text" Value="ðŸ‘¤ Assign" />
                                                <Setter Property="BackgroundColor" Value="#007bff" />
                                            </DataTrigger>
                                        </Button.Triggers>
                                        <!-- Style par dÃ©faut = Si AssignedUserName a une valeur = Bouton DÃ‰SASSIGNER -->
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Text" Value="ðŸ—‘ï¸ " />
                                                <Setter Property="BackgroundColor" Value="Gray" />
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <!-- Bouton Delete -->
                                    <Button Text="ðŸ—‘ï¸" 
                                            Clicked="OnDeleteClicked" 
                                            CommandParameter="{Binding .}" 
                                            BackgroundColor="#dc3545" 
                                            TextColor="White" 
                                            FontSize="10" 
                                            WidthRequest="28" 
                                            HeightRequest="28" />
                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>