<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             xmlns:converters="clr-namespace:TechStockMaui.Converters"
             x:Class="TechStockMaui.Views.ProductPage"
             Title="Products">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:AssignmentTextConverter x:Key="AssignmentTextConverter" />
            <converters:AssignmentColorConverter x:Key="AssignmentColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*">

        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Padding="10" BackgroundColor="#f8f9fa">
            <Button Grid.Column="0" 
                    x:Name="BackButton"
                    Text="🏠" 
                    Clicked="OnBackToDashboardClicked" 
                    BackgroundColor="Transparent" />
            <Label Grid.Column="1" 
                   x:Name="PageTitleLabel"
                   Text="Product Management" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" />
            <Button Grid.Column="2" 
                    x:Name="CreateButton"
                    Text="➕" 
                    Clicked="OnCreateClicked" 
                    BackgroundColor="#007bff" 
                    TextColor="White" />
        </Grid>

        <Frame Grid.Row="1" BorderColor="LightGray" Padding="10" Margin="5" BackgroundColor="White">
            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*,*" RowSpacing="8" ColumnSpacing="8">

                <Entry Grid.Row="0" Grid.Column="0" 
                       x:Name="NameEntry" 
                       Placeholder="Name..." 
                       FontSize="14" />
                <Entry Grid.Row="0" Grid.Column="1" 
                       x:Name="SerialEntry" 
                       Placeholder="Serial number..." 
                       FontSize="14" />
                <Picker Grid.Row="0" Grid.Column="2" 
                        x:Name="TypePicker" 
                        Title="Type" 
                        FontSize="14" />

                <Picker Grid.Row="1" Grid.Column="0" 
                        x:Name="SupplierPicker" 
                        Title="Supplier" 
                        FontSize="14" />
                <Picker Grid.Row="1" Grid.Column="1" 
                        x:Name="UserPicker" 
                        Title="User" 
                        FontSize="14" />

                <HorizontalStackLayout Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Spacing="10" HorizontalOptions="End">
                    <Button x:Name="SearchButton"
                            Text="🔍 Search" 
                            Clicked="OnSearchClicked" 
                            BackgroundColor="#007bff" 
                            TextColor="White" 
                            FontSize="14" />
                    <Button x:Name="ResetButton"
                            Text="🔄 Reset" 
                            Clicked="OnResetClicked" 
                            BackgroundColor="#6c757d" 
                            TextColor="White" 
                            FontSize="14" />
                </HorizontalStackLayout>
            </Grid>
        </Frame>

        <ScrollView Grid.Row="2" Orientation="Both" Margin="5">
            <StackLayout>

                <Grid BackgroundColor="#e9ecef" Padding="8,12" ColumnDefinitions="120,100,100,120,120,220">
                    <Label Grid.Column="0" 
                           x:Name="NameHeader"
                           Text="Name" 
                           FontAttributes="Bold" 
                           FontSize="14" />
                    <Label Grid.Column="1" 
                           x:Name="SerialHeader"
                           Text="Serial Number" 
                           FontAttributes="Bold" 
                           FontSize="14" />
                    <Label Grid.Column="2" 
                           x:Name="TypeHeader"
                           Text="Type" 
                           FontAttributes="Bold" 
                           FontSize="14" />
                    <Label Grid.Column="3" 
                           x:Name="SupplierHeader"
                           Text="Supplier" 
                           FontAttributes="Bold" 
                           FontSize="14" />
                    <Label Grid.Column="4" 
                           x:Name="UserHeader"
                           Text="User" 
                           FontAttributes="Bold" 
                           FontSize="14" />
                    <Label Grid.Column="5" 
                           x:Name="ActionsHeader"
                           Text="Actions" 
                           FontAttributes="Bold" 
                           FontSize="14" 
                           HorizontalOptions="Center" />
                </Grid>

                <CollectionView x:Name="ProductList" BackgroundColor="White">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8,10" ColumnDefinitions="120,100,100,120,120,220" BackgroundColor="White">
                                <BoxView Grid.ColumnSpan="6" Color="LightGray" HeightRequest="1" VerticalOptions="End" />

                                <Label Grid.Column="0" Text="{Binding Name}" FontSize="14" VerticalOptions="Center" />
                                <Label Grid.Column="1" Text="{Binding SerialNumber}" FontSize="14" VerticalOptions="Center" />
                                <Label Grid.Column="2" Text="{Binding TypeName}" FontSize="14" VerticalOptions="Center" />
                                <Label Grid.Column="3" Text="{Binding SupplierName}" FontSize="14" VerticalOptions="Center" />
                                <Label Grid.Column="4" Text="{Binding AssignedUserName}" FontSize="14" VerticalOptions="Center" />

                                <StackLayout Grid.Column="5" Orientation="Horizontal" Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">

                                    <Button Text="✎" 
                                            Clicked="OnEditClicked" 
                                            CommandParameter="{Binding .}" 
                                            BackgroundColor="#ffc107" 
                                            TextColor="Black" 
                                            FontSize="{OnPlatform Android=14, Default=10}" 
                                            WidthRequest="28" 
                                            HeightRequest="28" 
                                            CornerRadius="4" />

                                    <Button Text="👁" 
                                            Clicked="OnDetailsClicked" 
                                            CommandParameter="{Binding .}" 
                                            BackgroundColor="#17a2b8" 
                                            TextColor="White" 
                                            FontSize="{OnPlatform Android=14, Default=10}" 
                                            WidthRequest="28" 
                                            HeightRequest="28" 
                                            CornerRadius="4" />

                                    <Button Clicked="OnAssignClicked" 
                                            CommandParameter="{Binding .}" 
                                            TextColor="White" 
                                            FontSize="{OnPlatform Android=10, Default=8}" 
                                            WidthRequest="55" 
                                            HeightRequest="28"
                                            CornerRadius="4"
                                            Text="{Binding AssignedUserName, Converter={StaticResource AssignmentTextConverter}}"
                                            BackgroundColor="{Binding AssignedUserName, Converter={StaticResource AssignmentColorConverter}}" />


                                    <Button Text="✕" 
                                        Clicked="OnDeleteClicked" 
                                        CommandParameter="{Binding .}" 
                                        BackgroundColor="#dc3545" 
                                        TextColor="White" 
                                        FontSize="{OnPlatform Android=14, Default=10}" 
                                        WidthRequest="28" 
                                        HeightRequest="28" 
                                        CornerRadius="4" />
                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>

        <Frame Grid.Row="2"
               BackgroundColor="White" 
               HasShadow="True" 
               CornerRadius="8"
               Padding="10"
               Margin="20"
               VerticalOptions="End"
               HorizontalOptions="End"
               WidthRequest="150">
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="🌍" FontSize="16" VerticalOptions="Center" />
                <Label x:Name="LanguageFlag" 
                       Text="EN" 
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="#2c3e50"
                       BackgroundColor="#F5F5F5"
                       Padding="6,3"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageClicked"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </Frame>
    </Grid>
</ContentPage>