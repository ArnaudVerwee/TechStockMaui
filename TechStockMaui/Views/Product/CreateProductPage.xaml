<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.CreateProductPage"
             Title="Créer un produit"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Créer un produit" FontSize="24" FontAttributes="Bold" TextColor="Black" />

            <!-- Nom -->
            <Label Text="Nom" />
            <Entry x:Name="NameEntry" Placeholder="Entrez le nom du produit" />

            <!-- Numéro de série -->
            <Label Text="Numéro de série" />
            <Entry x:Name="SerialNumberEntry" Placeholder="Entrez le numéro de série" />

            <!-- Type -->
            <Label Text="Type" />
            <Picker x:Name="TypePicker" Title="Sélectionner un type" />

            <!-- Fournisseur -->
            <Label Text="Fournisseur" />
            <Picker x:Name="SupplierPicker" Title="Sélectionner un fournisseur" />

            <!-- Boutons -->
            <Button Text="Créer" BackgroundColor="#007bff" TextColor="White" Clicked="OnCreateClicked" />
            <Button Text="Retour à la liste" BackgroundColor="#6c757d" TextColor="White" Clicked="OnBackToListClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
