<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="TechStockMaui.Views.ProductDetailsPage" 
             Title="Détails du produit">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Détails du produit" FontSize="24" FontAttributes="Bold" />

            <Frame>
                <VerticalStackLayout Spacing="10">

                    <Label Text="Nom :" FontAttributes="Bold"/>
                    <Label Text="{Binding Name}" />

                    <Label Text="Numéro de série :" FontAttributes="Bold"/>
                    <Label Text="{Binding SerialNumber}" />

                    <Label Text="Type :" FontAttributes="Bold"/>
                    <Label Text="{Binding TypeName}" />

                    <Label Text="Fournisseur :" FontAttributes="Bold"/>
                    <Label Text="{Binding SupplierName}" />

                </VerticalStackLayout>
            </Frame>

            <HorizontalStackLayout Spacing="10">
                <Button Text="Modifier" BackgroundColor="#007bff" TextColor="White" Clicked="OnEditClicked" />
                <Button Text="Retour à la liste" BackgroundColor="#6c757d" TextColor="White" Clicked="OnBackClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>