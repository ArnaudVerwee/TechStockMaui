<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.DeleteProductPage"
             Title="Delete product"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Titre principal -->
            <Label x:Name="TitleLabel" 
                   Text="Delete product" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="Black" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />

            <!-- Question de confirmation -->
            <Label x:Name="ConfirmationLabel" 
                   Text="Are you sure you want to delete this?" 
                   FontAttributes="Italic" 
                   TextColor="#e74c3c"
                   HorizontalOptions="Center"
                   FontSize="16"
                   Margin="0,0,0,20" />

            <!-- Affichage des données -->
            <Frame BackgroundColor="#f8f9fa" 
                   Padding="15" 
                   CornerRadius="10"
                   HasShadow="True">
                <VerticalStackLayout Spacing="12">

                    <!-- Nom -->
                    <StackLayout>
                        <Label x:Name="NameFieldLabel" 
                               Text="Name:" 
                               FontAttributes="Bold" 
                               TextColor="#2c3e50" />
                        <Label x:Name="NameLabel" 
                               TextColor="#34495e"
                               FontSize="16" />
                    </StackLayout>

                    <!-- Numéro de série -->
                    <StackLayout>
                        <Label x:Name="SerialFieldLabel" 
                               Text="Serial Number:" 
                               FontAttributes="Bold" 
                               TextColor="#2c3e50" />
                        <Label x:Name="SerialLabel" 
                               TextColor="#34495e"
                               FontSize="16" />
                    </StackLayout>

                    <!-- Type -->
                    <StackLayout>
                        <Label x:Name="TypeFieldLabel" 
                               Text="Type:" 
                               FontAttributes="Bold" 
                               TextColor="#2c3e50" />
                        <Label x:Name="TypeLabel" 
                               TextColor="#34495e"
                               FontSize="16" />
                    </StackLayout>

                    <!-- Fournisseur -->
                    <StackLayout>
                        <Label x:Name="SupplierFieldLabel" 
                               Text="Supplier:" 
                               FontAttributes="Bold" 
                               TextColor="#2c3e50" />
                        <Label x:Name="SupplierLabel" 
                               TextColor="#34495e"
                               FontSize="16" />
                    </StackLayout>

                </VerticalStackLayout>
            </Frame>

            <!-- Boutons -->
            <VerticalStackLayout Spacing="10" Margin="0,20,0,0">
                <Button x:Name="DeleteButton"
                        Text="Delete" 
                        BackgroundColor="#dc3545" 
                        TextColor="White"
                        FontSize="16"
                        Padding="0,15"
                        CornerRadius="8"
                        Clicked="OnDeleteClicked" />

                <Button x:Name="BackButton"
                        Text="Back to List" 
                        BackgroundColor="#6c757d" 
                        TextColor="White"
                        FontSize="16"
                        Padding="0,15"
                        CornerRadius="8"
                        Clicked="OnBackToListClicked" />
            </VerticalStackLayout>

            <!-- Sélecteur de langue -->
            <Frame BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="8"
                   Padding="15"
                   Margin="0,30,0,0">
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Label Text="🌍" FontSize="20" VerticalOptions="Center" />
                    <Label x:Name="LanguageLabel"
                           Text="Language" 
                           FontSize="14"
                           TextColor="#2c3e50"
                           VerticalOptions="Center" />
                    <Label x:Name="LanguageFlag" 
                           Text="EN" 
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#2c3e50"
                           BackgroundColor="#F5F5F5"
                           Padding="8,4"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLanguageClicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>