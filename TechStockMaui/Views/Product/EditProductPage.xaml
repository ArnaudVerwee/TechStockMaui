<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.EditProductPage"
             Title="Edit Product"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            
            <Label x:Name="TitleLabel" 
                   Text="Edit Product" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            
            <VerticalStackLayout Spacing="5">
                <Label x:Name="NameLabel" 
                       Text="Name:" 
                       FontAttributes="Bold"
                       TextColor="#2c3e50" />
                <Entry x:Name="NameEntry" 
                       Placeholder="Product name" 
                       Text="{Binding Name}"
                       BackgroundColor="#f8f9fa"
                       TextColor="#2c3e50" />
            </VerticalStackLayout>

           
            <VerticalStackLayout Spacing="5">
                <Label x:Name="SerialNumberLabel" 
                       Text="Serial Number:" 
                       FontAttributes="Bold"
                       TextColor="#2c3e50" />
                <Entry x:Name="SerialNumberEntry" 
                       Placeholder="Serial number" 
                       Text="{Binding SerialNumber}"
                       BackgroundColor="#f8f9fa"
                       TextColor="#2c3e50" />
            </VerticalStackLayout>

         
            <VerticalStackLayout Spacing="5">
                <Label x:Name="TypeLabel" 
                       Text="Type:" 
                       FontAttributes="Bold"
                       TextColor="#2c3e50" />
                <Picker x:Name="TypePicker" 
                        Title="Select a type"
                        ItemDisplayBinding="{Binding Name}"
                        BackgroundColor="#f8f9fa"
                        TextColor="#2c3e50" />
            </VerticalStackLayout>

            
            <VerticalStackLayout Spacing="5">
                <Label x:Name="SupplierLabel" 
                       Text="Supplier:" 
                       FontAttributes="Bold"
                       TextColor="#2c3e50" />
                <Picker x:Name="SupplierPicker" 
                        Title="Select a supplier"
                        ItemDisplayBinding="{Binding Name}"
                        BackgroundColor="#f8f9fa"
                        TextColor="#2c3e50" />
            </VerticalStackLayout>

          
            <VerticalStackLayout Spacing="10" Margin="0,30,0,0">
                <Button x:Name="SaveButton"
                        Text="Save" 
                        BackgroundColor="#007bff" 
                        TextColor="White"
                        FontSize="16"
                        Padding="0,15"
                        CornerRadius="8"
                        Clicked="OnSaveClicked" />

                <Button x:Name="BackButton"
                        Text="Back to List" 
                        BackgroundColor="#6c757d" 
                        TextColor="White"
                        FontSize="16"
                        Padding="0,15"
                        CornerRadius="8"
                        Clicked="OnBackClicked" />
            </VerticalStackLayout>

            
            <Frame BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="8"
                   Padding="15"
                   Margin="0,30,0,0">
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Label Text="ðŸŒ" FontSize="20" VerticalOptions="Center" />
                    <Label x:Name="LanguageLabel"
                           Text="Language" 
                           FontSize="14"
                           TextColor="#2c3e50"
                           VerticalOptions="Center" />
                    <Label x:Name="LanguageFlag" 
                           Text="EN" 
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#2c3e50"
                           BackgroundColor="#F5F5F5"
                           Padding="8,4"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLanguageClicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>