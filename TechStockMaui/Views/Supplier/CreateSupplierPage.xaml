<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.Supplier.CreateSupplierPage"
             Title="Create Supplier"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Titre principal -->
            <Label x:Name="TitleLabel" 
                   Text="Create Supplier" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="Black" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <!-- Nom -->
            <VerticalStackLayout Spacing="5">
                <Label x:Name="NameLabel" 
                       Text="Name" 
                       FontAttributes="Bold"
                       TextColor="#2c3e50" />
                <Entry x:Name="NameEntry" 
                       Placeholder="Enter supplier name"
                       BackgroundColor="#f8f9fa"
                       TextColor="#2c3e50" />
            </VerticalStackLayout>

            <!-- Boutons -->
            <VerticalStackLayout Spacing="10" Margin="0,30,0,0">
                <Button x:Name="CreateButton"
                        Text="Create" 
                        BackgroundColor="#007bff" 
                        TextColor="White"
                        FontSize="16"
                        Padding="0,15"
                        CornerRadius="8"
                        Clicked="OnCreateClicked" />

                <Button x:Name="BackButton"
                        Text="Back to List" 
                        BackgroundColor="#6c757d" 
                        TextColor="White"
                        FontSize="16"
                        Padding="0,15"
                        CornerRadius="8"
                        Clicked="OnBackToListClicked" />
            </VerticalStackLayout>

            <!-- Sélecteur de langue -->
            <Frame BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="8"
                   Padding="15"
                   Margin="0,30,0,0">
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Label Text="🌍" FontSize="20" VerticalOptions="Center" />
                    <Label x:Name="LanguageLabel"
                           Text="Language" 
                           FontSize="14"
                           TextColor="#2c3e50"
                           VerticalOptions="Center" />
                    <Label x:Name="LanguageFlag" 
                           Text="EN" 
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#2c3e50"
                           BackgroundColor="#F5F5F5"
                           Padding="8,4"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLanguageClicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>