<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.Supplier.CreateSupplierPage"
             Title="Créer un fournisseur"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Créer un fournisseur" FontSize="24" FontAttributes="Bold" TextColor="Black" />

            <!-- Nom -->
            <Label Text="Nom" />
            <Entry x:Name="NameEntry" Placeholder="Entrez le nom du fournisseur" />

            <!-- Boutons -->
            <Button Text="Créer" BackgroundColor="#007bff" TextColor="White" Clicked="OnCreateClicked" />
            <Button Text="Retour à la liste" BackgroundColor="#6c757d" TextColor="White" Clicked="OnBackToListClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
