<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.Supplier.SupplierPage"
             Title="Suppliers"
             BackgroundColor="White">

    <VerticalStackLayout Padding="10">

        
        <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,10">
            
            <Button Grid.Column="0"
                    Text="ðŸ " 
                    Clicked="OnBackToDashboardClicked"
                    BackgroundColor="Transparent" 
                    TextColor="#6f42c1"
                    FontSize="24"
                    Padding="10"
                    HorizontalOptions="Start"
                    WidthRequest="50"
                    HeightRequest="50" />

            
            <Frame Grid.Column="2"
                   BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="8"
                   Padding="10"
                   VerticalOptions="Center">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="ðŸŒ" FontSize="16" VerticalOptions="Center" />
                    <Label x:Name="LanguageFlag" 
                           Text="EN" 
                           FontSize="12"
                           FontAttributes="Bold"
                           TextColor="#2c3e50"
                           BackgroundColor="#F5F5F5"
                           Padding="6,3"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLanguageClicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </Frame>
        </Grid>

       
        <Label x:Name="PageTitleLabel"
               Text="Suppliers" 
               FontSize="28" 
               FontAttributes="Bold" 
               Margin="0,0,0,15"
               TextColor="Black"
               HorizontalOptions="Start" />

       
        <Button x:Name="CreateNewButton"
                Text="âž• Create New" 
                Clicked="OnCreateClicked"
                BackgroundColor="#28a745" 
                TextColor="White"
                FontSize="16"
                Padding="15,10"
                CornerRadius="8"
                Margin="0,0,0,15"
                HorizontalOptions="Fill" />

        
        <ScrollView>
            <CollectionView x:Name="SupplierList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" 
                               Padding="15" 
                               Margin="0,2"
                               CornerRadius="8"
                               BackgroundColor="White">
                            <Grid ColumnDefinitions="*,Auto">

                                
                                <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                                    <Label Text="{Binding Name}" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           TextColor="Black" />
                                </VerticalStackLayout>

                             
                                <HorizontalStackLayout Grid.Column="1" 
                                                     Spacing="5" 
                                                     VerticalOptions="Center">

                                    
                                    <Button Text="âœï¸" 
                                            Clicked="OnEditClicked" 
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#ffc107" 
                                            TextColor="Black"
                                            FontSize="14"
                                            Padding="8,6"
                                            CornerRadius="6"
                                            WidthRequest="40"
                                            HeightRequest="40" />

                                    
                                    <Button Text="ðŸ‘ï¸" 
                                            Clicked="OnDetailsClicked" 
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#17a2b8" 
                                            TextColor="White"
                                            FontSize="14"
                                            Padding="8,6"
                                            CornerRadius="6"
                                            WidthRequest="40"
                                            HeightRequest="40" />

                                    
                                    <Button Text="ðŸ—‘ï¸" 
                                            Clicked="OnDeleteClicked" 
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#dc3545" 
                                            TextColor="White"
                                            FontSize="14"
                                            Padding="8,6"
                                            CornerRadius="6"
                                            WidthRequest="40"
                                            HeightRequest="40" />
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        
        <Label x:Name="NoSuppliersLabel"
               Text="No suppliers found"
               FontSize="16"
               TextColor="Gray"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               IsVisible="False"
               Margin="0,50,0,0" />

    </VerticalStackLayout>
</ContentPage>