<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.MaterialManagements.SignProductPage">


        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Produit :" FontAttributes="Bold" />
            <Label x:Name="ProductNameLabel" FontSize="18" />

            <GraphicsView x:Name="SignaturePad" HeightRequest="200" BackgroundColor="White"
                      Drawable="{x:Static local:SignatureDrawable.Instance}"
                      StartInteraction="OnStartDraw"
                      DragInteraction="OnDraw"
                      EndInteraction="OnEndDraw"
                      />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Effacer" Clicked="OnClearClicked" BackgroundColor="Orange" TextColor="White" />
                <Button Text="Soumettre" Clicked="OnSubmitClicked" BackgroundColor="Green" TextColor="White" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ContentPage>

