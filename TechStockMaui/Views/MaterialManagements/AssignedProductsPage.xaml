<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.MaterialManagements.AssignedProductsPage"
             Title="Mes Produits Assignés">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- ✅ HEADER -->
        <Frame Grid.Row="0" BackgroundColor="LightBlue" Padding="15" Margin="10,10,10,0">
            <StackLayout>
                <Label Text="Produits qui me sont assignés" 
                       FontAttributes="Bold" 
                       FontSize="18" 
                       HorizontalOptions="Center"/>
                <Label Text="Cliquez sur 'Signer' pour confirmer la réception d'un produit" 
                       FontSize="14" 
                       TextColor="Gray" 
                       HorizontalOptions="Center"/>
            </StackLayout>
        </Frame>

        <!-- ✅ LISTE DES PRODUITS -->
        <ScrollView Grid.Row="1">
            <CollectionView x:Name="ProductsCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10" 
                               Padding="15" 
                               BorderColor="LightGray" 
                               CornerRadius="10"
                               BackgroundColor="White">
                            <StackLayout Spacing="8">

                                <!-- Nom du produit -->
                                <Label Text="{Binding Product.Name}" 
                                       FontAttributes="Bold" 
                                       FontSize="18" 
                                       TextColor="DarkBlue"/>

                                <!-- Numéro de série -->
                                <Label Text="{Binding Product.SerialNumber, StringFormat='Série: {0}'}" 
                                       FontSize="14" 
                                       TextColor="Gray"/>

                                <!-- État du produit -->
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="État : " FontAttributes="Bold" FontSize="14"/>
                                    <Label Text="{Binding State.Status}" FontSize="14" TextColor="DarkGreen"/>
                                </StackLayout>

                                <!-- Date d'assignation -->
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Assigné le : " FontAttributes="Bold" FontSize="14"/>
                                    <Label Text="{Binding AssignmentDate, StringFormat='{0:dd/MM/yyyy à HH:mm}'}" FontSize="14"/>
                                </StackLayout>

                                <!-- Séparateur -->
                                <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,5"/>

                                <!-- SECTION SIGNATURE -->
                                <StackLayout>
                                    <Label Text="Statut de réception :" FontAttributes="Bold" FontSize="14"/>

                                    <!-- ✅ Signature en attente (utilise vos propriétés calculées) -->
                                    <StackLayout IsVisible="{Binding IsSignaturePending}">
                                        <Label Text="⏳ En attente de votre signature" 
                                               TextColor="Orange" 
                                               FontSize="14"
                                               FontAttributes="Italic"/>

                                        <Button Text="✍️ Signer la réception"
                                                BackgroundColor="Green"
                                                TextColor="White"
                                                Clicked="OnSignClicked" 
                                                CommandParameter="{Binding Id}"
                                                Margin="0,5,0,0"
                                                CornerRadius="5"/>
                                    </StackLayout>

                                    <!-- ✅ Produit signé (utilise vos propriétés calculées) -->
                                    <StackLayout IsVisible="{Binding IsSignatureValid}">
                                        <Label Text="✅ Réception confirmée" 
                                               TextColor="Green" 
                                               FontAttributes="Bold"
                                               FontSize="14"/>

                                        <Label Text="{Binding Signature}" 
                                               FontSize="12" 
                                               TextColor="Gray"
                                               FontAttributes="Italic"/>

                                        <Label Text="{Binding SignatureDate, StringFormat='Signé le {0:dd/MM/yyyy à HH:mm}'}" 
                                               FontSize="12" 
                                               TextColor="Gray"/>
                                    </StackLayout>
                                </StackLayout>

                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- ✅ BOUTONS D'ACTION -->
        <StackLayout Grid.Row="2" 
                     Orientation="Horizontal" 
                     HorizontalOptions="Center" 
                     Spacing="15" 
                     Padding="10">

            <Button Text="🔄 Actualiser" 
                    Clicked="OnRefreshClicked"
                    BackgroundColor="Blue"
                    TextColor="White"/>

            <Button Text="🏠 Retour" 
                    Clicked="OnBackClicked"
                    BackgroundColor="Gray"
                    TextColor="White"/>
        </StackLayout>

    </Grid>
</ContentPage>