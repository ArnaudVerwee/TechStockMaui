<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.MaterialManagements.AssignedProductsPage"
             Title="Mes Produits Assignés">

    <Grid RowDefinitions="Auto,*,Auto">

        <Frame Grid.Row="0" BackgroundColor="LightBlue" Padding="15" Margin="10,10,10,0">
            <StackLayout>
                <Label x:Name="HeaderTitleLabel"
                       Text="Produits qui me sont assignés"
                       FontAttributes="Bold"
                       FontSize="18"
                       HorizontalOptions="Center"/>
                <Label x:Name="HeaderDescriptionLabel"
                       Text="Cliquez sur 'Signer' pour confirmer la réception d'un produit"
                       FontSize="14"
                       TextColor="Gray"
                       HorizontalOptions="Center"/>
            </StackLayout>
        </Frame>

        <ScrollView Grid.Row="1" VerticalOptions="FillAndExpand">
            <CollectionView x:Name="ProductsCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10"
                               Padding="15"
                               BorderColor="LightGray"
                               CornerRadius="10"
                               BackgroundColor="White">
                            <StackLayout Spacing="8">
                                <Label Text="{Binding Product.Name}"
                                       FontAttributes="Bold"
                                       FontSize="18"
                                       TextColor="DarkBlue"/>
                                <Label Text="{Binding Product.SerialNumber, StringFormat='Série: {0}'}"
                                       FontSize="14"
                                       TextColor="Gray"/>
                                <StackLayout Orientation="Horizontal">
                                    <Label x:Name="StateLabel" Text="État : " FontAttributes="Bold" FontSize="14"/>
                                    <Label Text="{Binding State.Status}" FontSize="14" TextColor="DarkGreen"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label x:Name="AssignedLabel" Text="Assigné le : " FontAttributes="Bold" FontSize="14"/>
                                    <Label Text="{Binding AssignmentDate, StringFormat='{0:dd/MM/yyyy à HH:mm}'}" FontSize="14"/>
                                </StackLayout>
                                <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,5"/>
                                <StackLayout>
                                    <Label x:Name="ReceptionStatusLabel" Text="Statut de réception :" FontAttributes="Bold" FontSize="14"/>
                                    <StackLayout IsVisible="{Binding IsSignaturePending}">
                                        <Label x:Name="PendingSignatureLabel"
                                               Text="⏳ En attente de votre signature"
                                               TextColor="Orange"
                                               FontSize="14"
                                               FontAttributes="Italic"/>
                                        <Button x:Name="SignButton"
                                                Text="✍️ Signer la réception"
                                                BackgroundColor="Green"
                                                TextColor="White"
                                                Clicked="OnSignClicked"
                                                CommandParameter="{Binding Id}"
                                                Margin="0,5,0,0"
                                                CornerRadius="5"/>
                                    </StackLayout>
                                    <StackLayout IsVisible="{Binding IsSignatureValid}">
                                        <Label x:Name="ConfirmedReceptionLabel"
                                               Text="✅ Réception confirmée"
                                               TextColor="Green"
                                               FontAttributes="Bold"
                                               FontSize="14"/>
                                        <Label Text="{Binding Signature}"
                                               FontSize="12"
                                               TextColor="Gray"
                                               FontAttributes="Italic"/>
                                        <Label Text="{Binding SignatureDate, StringFormat='Signé le {0:dd/MM/yyyy à HH:mm}'}"
                                               FontSize="12"
                                               TextColor="Gray"/>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <StackLayout Grid.Row="2" Orientation="Vertical" Padding="10" Spacing="10" BackgroundColor="White">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
                <Button x:Name="RefreshButton"
                        Text="🔄 Actualiser"
                        Clicked="OnRefreshClicked"
                        BackgroundColor="Blue"
                        TextColor="White"
                        FontSize="14"
                        Padding="10,8"
                        CornerRadius="5"/>
                <Button x:Name="BackButton"
                        Text="🏠 Retour"
                        Clicked="OnBackClicked"
                        BackgroundColor="Gray"
                        TextColor="White"
                        FontSize="14"
                        Padding="10,8"
                        CornerRadius="5"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Label Text="🌍" FontSize="18" VerticalOptions="Center"/>
                <Label x:Name="LanguageLabel"
                       Text="Language"
                       FontSize="12"
                       TextColor="#2c3e50"
                       VerticalOptions="Center"/>
                <Label x:Name="LanguageFlag"
                       Text="🇺🇸"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="#2c3e50"
                       BackgroundColor="#F5F5F5"
                       Padding="6,3"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageClicked"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </StackLayout>

    </Grid>
</ContentPage>
