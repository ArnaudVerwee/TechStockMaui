<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.CreateTypeArticlePage"
             Title="Créer un Type d'Article"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Créer un nouveau type d'article" 
               FontSize="24" 
               FontAttributes="Bold" />

        <Label Text="Nom du type :" 
               FontAttributes="Bold" />

        <!-- IMPORTANT: Cette ligne avec x:Name="NameEntry" -->
        <Entry x:Name="NameEntry" 
               Placeholder="Entrez le nom du type d'article" />

        <Button Text="Enregistrer" 
                Clicked="OnSaveClicked"
                BackgroundColor="#28a745"
                TextColor="White" />

        <Button Text="Annuler" 
                Clicked="OnCancelClicked"
                BackgroundColor="#6c757d"
                TextColor="White" />

    </VerticalStackLayout>
</ContentPage>