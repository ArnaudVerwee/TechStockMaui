<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.TypeArticle.DeleteTypeArticlePage">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Supprimer un type de produit"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="Black" />

        <Label Text="Êtes-vous sûr de vouloir supprimer ce type ?"
               TextColor="Red" />

        <Frame BorderColor="Gray" Padding="10">
            <!-- Ajout d’un layout pour corriger l’erreur -->
            <VerticalStackLayout>
                <Label Text="Nom :" FontAttributes="Bold" />
                <Label x:Name="NameLabel" />
            </VerticalStackLayout>
        </Frame>

        <Button Text="Supprimer"
                BackgroundColor="#dc3545"
                TextColor="White"
                Clicked="OnDeleteClicked" />

        <Button Text="Retour à la liste"
                BackgroundColor="#6c757d"
                TextColor="White"
                Clicked="OnBackClicked" />

    </VerticalStackLayout>
</ContentPage>
