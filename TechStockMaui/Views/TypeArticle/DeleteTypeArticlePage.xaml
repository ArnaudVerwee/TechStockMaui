<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.TypeArticle.DeleteTypeArticlePage"
             Title="Delete Type Article">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            
            <Frame BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="12" 
                   Padding="20"
                   Margin="0,0,0,15">
                <StackLayout>
                    <Label x:Name="TitleLabel"
                           Text="Supprimer un type de produit"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#dc3545"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            
            <Frame BackgroundColor="#fff3cd" 
                   BorderColor="#ffeaa7" 
                   CornerRadius="8" 
                   Padding="15"
                   Margin="0,0,0,15">
                <Label x:Name="ConfirmationLabel"
                       Text="Êtes-vous sûr de vouloir supprimer ce type ?"
                       TextColor="#856404"
                       FontSize="16"
                       HorizontalOptions="Center"
                       FontAttributes="Bold" />
            </Frame>

           
            <Frame BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="12" 
                   Padding="20"
                   BorderColor="#dee2e6"
                   Margin="0,0,0,15">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="TypeInfoHeaderLabel"
                           Text="Informations du type d'article"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#2c3e50"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10" />

                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label x:Name="NameHeaderLabel" 
                               Text="Nom :" 
                               FontAttributes="Bold" 
                               FontSize="16"
                               TextColor="#495057"
                               VerticalOptions="Center" />
                        <Label x:Name="NameLabel" 
                               FontSize="18"
                               TextColor="#2c3e50"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               HorizontalOptions="FillAndExpand" />
                    </StackLayout>
                </VerticalStackLayout>
            </Frame>

           
            <StackLayout Spacing="10" Margin="0,15,0,0">
                <Button x:Name="DeleteButton"
                        Text="Supprimer"
                        BackgroundColor="#dc3545"
                        TextColor="White"
                        Clicked="OnDeleteClicked"
                        FontSize="16"
                        Padding="0,15"
                        CornerRadius="8" />

                <Button x:Name="BackButton"
                        Text="Retour à la liste"
                        BackgroundColor="#6c757d"
                        TextColor="White"
                        Clicked="OnBackClicked"
                        FontSize="16"
                        Padding="0,15"
                        CornerRadius="8" />
            </StackLayout>

         
            <Frame BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="8"
                   Padding="15"
                   Margin="0,30,0,0">
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Label Text="🌍" FontSize="20" VerticalOptions="Center" />
                    <Label x:Name="LanguageLabel"
                           Text="Language" 
                           FontSize="14"
                           TextColor="#2c3e50"
                           VerticalOptions="Center" />
                    <Label x:Name="LanguageFlag" 
                           Text="🇺🇸" 
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#2c3e50"
                           BackgroundColor="#F5F5F5"
                           Padding="8,4"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLanguageClicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>