<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.TypeArticle.DetailsTypeArticlePage">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Détails du Type de Produit"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="Black" />

        <Frame BorderColor="Gray" Padding="10">
            <!-- Correction : ajout d’un layout pour contenir les deux Labels -->
            <VerticalStackLayout>
                <Label Text="Nom :" FontAttributes="Bold" />
                <Label x:Name="NameLabel" />
            </VerticalStackLayout>
        </Frame>

        <Button Text="Modifier"
                BackgroundColor="#007bff"
                TextColor="White"
                Clicked="OnEditClicked" />

        <Button Text="Retour à la liste"
                BackgroundColor="#6c757d"
                TextColor="White"
                Clicked="OnBackClicked" />

    </VerticalStackLayout>
</ContentPage>
