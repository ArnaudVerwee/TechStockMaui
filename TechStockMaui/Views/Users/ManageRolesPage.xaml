<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechStockMaui.Views.Users.ManageRolesPage"
             Title="Gestion des rôles">

    <ScrollView>
        <StackLayout Margin="20">

            <!-- En-tête utilisateur -->
            <Label Text="{Binding UserName, StringFormat='Utilisateur: {0}'}" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   Margin="0,0,0,20"/>

            <!-- Message de test -->
            <Label Text="Page de gestion des rôles" 
                   FontSize="16" 
                   Margin="0,0,0,20"/>

            <!-- Indicateur de chargement -->
            <ActivityIndicator IsVisible="{Binding IsLoading}" 
                              IsRunning="{Binding IsLoading}"
                              Margin="0,0,0,20"/>

            <!-- Liste simple des rôles -->
            <Label Text="Rôles disponibles:" FontSize="16" FontAttributes="Bold" Margin="0,0,0,10"/>

            <CollectionView ItemsSource="{Binding AvailableRoles}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding RoleName}" 
                                   FontSize="16" 
                                   VerticalOptions="Center"
                                   HorizontalOptions="StartAndExpand"/>
                            <Switch IsToggled="{Binding IsSelected}" 
                                    VerticalOptions="Center"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Boutons -->
            <Button Text="Sauvegarder" 
                    Command="{Binding SaveCommand}"
                    BackgroundColor="Green"
                    TextColor="White"
                    Margin="0,20,0,10"/>

            <Button Text="Annuler" 
                    Command="{Binding CancelCommand}"
                    BackgroundColor="Red"
                    TextColor="White"/>

        </StackLayout>
    </ScrollView>

</ContentPage>